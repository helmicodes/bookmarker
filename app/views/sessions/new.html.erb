<%= form_with(url: session_path, class: "w-full max-w-sm mx-auto mt-16") do |f| %>
  <div>
    <%= f.label :username, class: "block text-sm font-semibold" %>
    <%= f.text_field :username, autofocus: true, required: true, class: "mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm" %>
  </div>

  <div class="mt-1">
    <%= f.label :password, class: "block text-sm font-semibold" %>
    <%= f.password_field :password, required: true, class: "mt-1 w-full rounded-md border-gray-200 bg-white text-sm text-gray-700 shadow-sm" %>
  </div>

  <div class="mt-1 block text-sm">
    No account yet? <%= link_to "Sign up!", signup_path, class: "underline" %>
  </div>

  <%= f.submit "Sign In", class: "mt-3 w-full px-8 py-3 cursor-pointer font-semibold text-sm rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-600 dark:bg-emerald-400 dark:hover:bg-emerald-500 dark:text-gray-900 dark:focus:ring-emerald-400 dark:focus:ring-offset-current" %>
<% end %>
